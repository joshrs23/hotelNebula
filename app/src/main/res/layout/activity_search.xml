<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <LinearLayout
        android:id="@+id/ly_title"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#88DC27"
        >

        <TextView
            android:id="@+id/tv_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Discover rooms"
            android:textStyle="bold"
            android:textSize="35sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="25dp"
            android:textColor="@color/black"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/ed_searchRooms"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:ems="12"
        android:textSize="20sp"
        android:inputType="text"
        android:text="Search for a room"
        app:layout_constraintTop_toBottomOf="@id/ly_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/custom_input"
        android:layout_marginTop="5dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginLeft="50dp"
        />

    <ImageButton
        android:id="@+id/serachButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_search_black"
        app:layout_constraintStart_toEndOf="@id/ed_searchRooms"
        app:layout_constraintTop_toTopOf="@id/ed_searchRooms"
        app:layout_constraintBottom_toBottomOf="@id/ed_searchRooms"
        app:layout_constraintRight_toRightOf="parent"

        />

    <TextView
        android:id="@+id/tv_rooms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rooms"
        app:layout_constraintTop_toBottomOf="@+id/ed_searchRooms"
        app:layout_constraintStart_toStartOf="@+id/ed_searchRooms"
        android:paddingTop="15dp"
        android:textSize="20sp"
        android:textStyle="bold"
        />

    <TableLayout
        android:id="@+id/table_rooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_rooms"
        app:layout_constraintStart_toStartOf="@+id/ed_searchRooms"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_grandRoom"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/grand_room"
                    />

                <TextView
                    android:id="@+id/tv_grandRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Grand room"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_cozyRoom"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/cozy_room" />

                <TextView
                    android:id="@+id/tv_cozyRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cozy room"
                    android:gravity="center"
                    />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_pentHouseRoom"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/penthouse_room"
                    />

                <TextView
                    android:id="@+id/tv_pentHouseRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pent House"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_suiteRoom"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/suite_room" />

                <TextView
                    android:id="@+id/tv_suiteRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Suite room"
                    android:gravity="center"
                    />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_singleRoom"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/single_room"
                    />

                <TextView
                    android:id="@+id/tv_singleRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Single room"
                    android:gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img_doubleRoom"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:src="@drawable/double_room" />

                <TextView
                    android:id="@+id/tv_doubleRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Double room"
                    android:gravity="center"
                    />
            </LinearLayout>

        </TableRow>
    </TableLayout>
    <include
        layout="@layout/menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>